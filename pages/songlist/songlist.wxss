/* pages/songlist/songlist.wxss */
.song-img{
    height: 400rpx;
    position: relative;
}
.song-img .img-bg{
    width: 100%;
    height: 400rpx;
    z-index: -10;
}
.img-icon{
    position: absolute;
    top: 100rpx;
    left: 20rpx;
}
.img-icon image{
    width: 150rpx;
    height: 150rpx;
}
.song-lists{
    display: flex;
    flex-direction: column;
    
}
.lists-list{
    display: flex;
    justify-content: flex-start;
    height: 100rpx;
    border-bottom: 2rpx solid rgba(204, 204, 204, 0.507);
}
.list-img{
    height: 80rpx;
    margin: auto 0;
    margin-left: 10rpx;
}
.list-img image{
    width: 80rpx;
    height: 80rpx;
    border-radius: 6rpx;
}
.list-name{
    line-height: 100rpx;
    font-size: 20rpx;
    margin-left: 20rpx;
}
.more-btn{
    display: flex;
    height: 100rpx;
    position: absolute;
    right: 40rpx;
}
.more-btn image{
    width: 50rpx;
    height: 50rpx;
    margin: auto 0;
}