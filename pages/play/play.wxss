/* pages/play/play.wxss */
.bg-img{
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    z-index: -1000;
    filter: blur(100rpx)
}
.record{
    display: flex;
    justify-content: center;
    margin: 200rpx auto;
}

@keyframes rotation{
    from {transform: rotate(0deg);}
    to {transform: rotate(360deg);}
}
.record-img{
    margin: auto;
    box-sizing: border-box;
    width: 500rpx;
    height: 500rpx;
    border-radius: 50%;
    border: 100rpx solid rgb(19, 17, 17);
    
}
.record-rotate{
    animation: rotation 4s linear infinite;
}
.audio{
    position: fixed;
    bottom: 50rpx;
    left: 0;
    right: 0;
}
.audio-btns{
    display: flex;
    justify-content:space-around;
}
.audio-btn image{
    width: 60rpx;
    height: 60rpx;
}